{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "c:/xampp/htdocs/marketplace": "${workspaceFolder}"
            },
            "log": true
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/marketplace/",
            "webRoot": "${workspaceFolder}",
            "pathMapping": {
                "c:/xampp/htdocs/marketplace": "${workspaceFolder}"
            }
        }
    ]
}